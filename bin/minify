#!/usr/bin/env node
let cmd = require('commander');
let minify = require('../minify');
let pkg = require('../package.json');

cmd
    .version(pkg.version)
    .option('-s, --source [path]', 'Source dir.')
    .parse(process.argv);

if (!cmd.source) {
    cmd.help();
    process.exit();
}


minify(cmd.source);
